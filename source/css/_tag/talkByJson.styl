.getJsonTalk-api {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between; 
  width: 100%;
}
.talk-card {
  width: 48%;
  @media screen and (max-width: 768px) {
    width: 100%;
    margin-right: 0;  
  }
  border: 1px solid #e3e8f7;
  border-radius: 12px;
  padding: 1rem;
  padding-bottom: 0.5rem;
  transition: 0.3s;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: flex-start;
  background: #fff;
  box-shadow: 0 8px 16px -4px #2c2d300c;
  margin-right: 2%;
  box-sizing: border-box;
  margin-bottom: 1rem;
  &:hover {
    border: 1px solid $color-primary;
  }
  .hr {
    display: flex;
    position: relative;
    margin: 8px 0;
    border-bottom: 1px dashed $color-primary;
    width: 100%;
    height: 1!important;
  }
  .talk-content {
    display: flex;
    flex-direction: initial;
    flex-wrap: wrap;
    border-radius: 12px;
    width: 100%;
    height: 100%;
    p {
      order: 0;
      font-size: 0.8rem;
      font-weight: bold;
      color: var(--heo-fontcolor);
      width: 100%;
      line-height: 1.38;
      border-radius: 12px;
      margin-bottom: 0.5rem;
      display: flex;
      flex-direction: column;
      text-align: justify;
    }
    .img {
      width: 100%;
      height: 100px;
      margin: auto;
      margin-top: 0.2rem;
      margin-bottom: 0.3rem;
      margin-left: 0;
      border-radius: 12px;
      overflow: hidden;
      display: flex;
      position: relative;
    }
    .img img {
      object-fit: cover;
      max-height: 100%;
      border-radius: 12px;
      margin-right: 5px;
      margin: 0;
    }
    .fancybox {
      margin: 0!important;
      align-items: flex-start;
      a {
        height: 100%;
      }
    }
    .music {
      height: 100px;
      display: inline-block;
      width: 100%;
    }
  }
  .talk-bottom {
    display: flex;
    justify-content: space-between;
    width: 100%;
    .date-info {
      display: flex;
      align-items: center;
      i {
        margin-right: 8px;
        font-size: 16px;
      }
      .time {
        color: #363636;
        font-size: 0.7rem;
        background-color: #9999992b;
        padding: 0 8px;
        border-radius: 20px;
        cursor: default;
        display: flex;
        align-items: center;
      }
      .link {
        display: flex;
        margin-left: 0.5rem;
        font-size: 0.7rem;
        align-items: center;
        background-color: $color-primary + 8 * 10% + 1 * .5deg;
        color: $color-primary;
        padding: 0 8px;
        border-radius: 20px;  
        i {
          margin-right: 3px;
          font-size: 16px;
        }
      }
    }
  }
}
.darkModel {
  .talk-card {
    background-color: #2d3032;
    .music {
      color: #273849;
      .aplayer-lrc-current {
        color: $color-primary!important;  
      }  
    }
    & .talk-bottom .date-info .time {
      color: #f0f6fc; 
    }
  }  
}






