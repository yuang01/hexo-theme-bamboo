.topArticle {
  width: 100%;
  margin-bottom: 16px;
  background: convert(hexo-config('topArticle.background'));
  box-shadow: 0 1px 20px -6px rgba(0, 0, 0, 0.5);
  padding: 20px;
  padding-bottom: 40px;
  border-radius: 10px;
  box-sizing: border-box;
  transition: all 0.3s;

  h3 {
    color: #273849;

    i {
      margin-right: 5px;
    }
  }

  .articles {
    display: flex;
    flex-wrap: wrap;

    .article-link {
      position: relative;
      flex: 0 0 31.33333%;
      margin: 0 1%;
      display: block;
      height: 180px;
      margin-top: 20px;
      box-shadow: 0 1px 20px -6px rgba(0, 0, 0, 0.5);
      border-radius: 10px;
      overflow: hidden;
      text-align: center;
      background: #000;

      .article {
        width: 100%;
        height: 100%;
        opacity: 0.6;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }

      .text {
        width: 80%;
        height: 100%;
        color: #ffffff;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 0;
        display: flex;
        flex-direction: column;

        .text-main {
          flex: 1;
        }

        .title {
          font-weight: 700;
          font-size: 1.2em;
          margin-top: 10px;
          display: -webkit-box;
          line-height: 30px;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;
          overflow: hidden;

          a {
            color: #ffffff;
            transition: all 0.3s;

            &:hover {
              color: $color-primary !important;
            }
          }
        }

        .content {
          color: hsla(0, 0%, 100%, 0.78);
          margin-top: 10px;
          display: -webkit-box;
          line-height: 20px;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 3;
          overflow: hidden;
        }

        .more {
          i {
            margin-right: 5px;
          }

          display: block;
          height: 30px;
          margin: 5px;
          border-radius: 20px;
          color: #ffffff;
          transition: all 0.3s;

          &:hover {
            color: $color-primary !important;
          }
        }
      }
    }
  }
}

@media (max-width: 992px) and (min-width: 625px) {
  .topArticle {
    width: 100%;

    .articles {
      .article-link {
        flex: 0 0 31.33333%;
        margin-left: 1%;
        margin-right: 1%;
        height: 180px;
      }
    }
  }
}

@media (max-width: 625px) and (min-width: 551px) {
  .topArticle {
    width: 100%;

    .articles {
      .article-link {
        flex: 0 0 100%;
        height: 300px;

        .text {
          .title {
            font-weight: 700;
            font-size: 1.5em;
            margin-bottom: 20px;
            margin-top: 60px;
          }

          .content {
            margin-bottom: 60px;
            display: -webkit-box;
            line-height: 20px;
            font-size: 1.2em;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 3;
            overflow: hidden;
          }

          .more {
            padding: 10px 20px;
          }
        }
      }
    }
  }
}

@media (max-width: 551px) {
  .topArticle {
    width: 100%;

    .articles {
      .article-link {
        flex: 0 0 100%;
        height: 210px;

        .text {
          .title {
            margin-top: 30px;
          }

          .content {
            margin-bottom: 20px;
          }
        }
      }
    }
  }
}