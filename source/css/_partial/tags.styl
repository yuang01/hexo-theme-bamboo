// 首页的文章列表的tags样式
.post-tags {
  float: left;
  color: #8a8a8a;
  display: flex;
  align-items: center;

  i {
    margin-right: 5px;
  }

  .article-tag-list li {
    display: inline-block;
    margin-right: 5px;
  }

  .article-tag-list li a {
    color: #8a8a8a;

    &:hover {
      color: #42b983;
    }
  }
}

.bg-light-floor-tags {
  background: convert(hexo-config('tag.background'));
  background-size: cover;
  background-position: center center;
}

.tags-header {
  position: relative;
  width: 100%;
  height: 60vh;

  if (hexo-config('tag.full')) {
    height: 100vh;
  }

  overflow: hidden;
  background-size: cover;
  background-position: center center;
  background-color: $color-primary;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: $color-inner;

  .tags-header-title {
    z-index: 2;
    font-size: 2.5rem;
    font-family: MV Boli;
    color: #fff;
  }

  .tags-header-desc {
    z-index: 2;
    font-weight: 500;
    font-size: 1.25rem;
    line-height: 1.4em;
    font-family: 'Architects Daughter', cursive !important;
    color: #fff;
    min-height: 1.4em;
  }

  .mask-box {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: #000;
    opacity: 0.2;
    z-index: 1;
  }
}

.tags-video {
  width: 100%;
  height: 100vh;
  color: $color-inner;

  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-header-title {
    z-index: 2;
    font-size: 2.5rem;
    font-family: MV Boli;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
  }

  .video-header-desc {
    z-index: 2;
    font-weight: 500;
    font-size: 1.25rem;
    line-height: 1.4em;
    font-family: 'Architects Daughter', cursive !important;
    color: #fff;
    min-height: 1.4em;
    position: absolute;
    left: 50%;
    top: calc(50% + 50px);
    transform: translate(-50%, -50%);
  }

  .mask-box {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: #000;
    opacity: 0.2;
    z-index: 1;
  }
}

@media (min-width: 992px) {
  if (hexo-config('tag.video')) {
    .tags-video {
      display: block;
    }

    .tags-header {
      display: none;
    }
  } else {
    .tags-video {
      display: none;
    }

    .tags-header {
      display: flex;
    }
  }
}

@media (max-width: 992px) {
  .tags-video {
    display: none;
  }

  .tags-header {
    display: flex;
  }
}

// 标签页面的tags样式
#tags {
  min-height: calc(70vh - 60px);

  .card {
    .card-content {
      margin: 20px 0 40px 0;

      .tag-title {
        font-size: 1.6em;
        color: #273849;

        if (hexo-config('tag.titleColor')) {
          color: convert(hexo-config('tag.titleColor'));
        }

        text-align: center;
        padding: 15px 0;
      }

      .tag-chips {
        text-align: center;

        a {
          margin: 0 5px;

          .tag-content {
            width: 30%;
            padding: 5px 10px;
            display: inline-block;
            border-radius: 10px;
            color: #273849;
            box-shadow: 0 1px 10px -3px rgba(0, 0, 0, 0.5);
            transition: all 0.3s;
            margin-top: 20px;

            &:hover {
              transform: scale(1.2);
            }

            .tag-length {
              color: #49b1f5;
            }
          }
        }
      }
    }
  }
}