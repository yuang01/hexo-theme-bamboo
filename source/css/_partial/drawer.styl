#appDrawer {
  .fa-bars {
    color: $color-inner;
    padding: 10px;
    cursor: pointer;
  }

  .drawer-box_mask {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }

  .drawer-box {
    position: fixed;
    box-sizing: border-box;
    left: -240px;
    top: 0;
    width: 240px;
    height: 100%;
    z-index: 999;
    background-color: #fff;
    transition: left 0.3s;
    overflow: auto;

    &.active {
      left: 0;
    }

    .drawer-box-head {
      padding: 20px 10px;
      color: #ffffff;

      .drawer-box-head_logo {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-left: 50%;
        transform: translateX(-50%);
      }

      .drawer-box-head_title {
        text-align: center;
        font-size: 1.6em;
        font-family: 'Comic Sans MS', cursive, LiSu, sans-serif;
        text-decoration: none;
      }

      .drawer-box-head_desc {
        font-size: 0.8em;
        text-align: center;
      }
    }

    .drawer-box-content {
      .drawer-box-content_menu {
        .drawer-box-content_item {
          display: block;
          box-sizing: border-box;
          overflow: hidden;

          a {
            color: #273849;
            display: block;
            width: 100%;
            height: 100%;
            position: relative;
            box-sizing: border-box;
            padding: 10px 20px;

            .arrow {
              transition: all 0.3s;
            }

            .icon-rotate {
              transform: rotate(-90deg);
            }

            &:hover {
              background-color: rgba(0, 0, 0, 0.1);
            }
          }

          .has-children {
            display: flex;
            justify-content: space-between;
            align-items: center;
          }

          .drawer-sub-menu {
            padding-left: 15px;
            list-style: none;
          }
        }
      }
    }
  }
}
