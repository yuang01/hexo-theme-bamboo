// 文章详情
.row {
  display: flex;
  // background-color: #42b983;
}
.justify-center {
  justify-content: center;  
}
.main-content {
  width: 55%;
  margin-top: 10px;
  // margin-top: -30px;
}
.toc-aside {
  color: #273849;
  width: 200px;
  margin-left: 25px;
  .toc-content {
    max-height: 60vh;
    overflow: auto;  
  }
  .toc-aside-title {
    font-size: 1.5rem;
    font-weight: bold;
    line-height: 1.5rem;
    margin: 35px 0 15px 0;
    i {
      margin-right: 10px;
    }
  }
}

.post-detail {
  padding: 20px 40px;
  color: #273849;
  -webkit-font-smoothing: antialiased;
  line-height: 1.6rem;
  letter-spacing: 0;
  margin: 0;
  overflow-x: hidden;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 5px #ccc;
  .post-title {
    text-align: center;
    font-size: 1.6em;
    color: #273849;
    font-weight: 700;
    margin: 10px 0 30px 0;
  }
  .post-tags-categories {
    display: flex;
    .tags,
    .category {
      margin-right: 10px;  
    }  
  }
  .post-content {
    margin-top: 20px;
    .headerlink {
      position: relative;
    }
    h1:hover .headerlink::before,
    h2:hover .headerlink::before,
    h3:hover .headerlink::before,
    h4:hover .headerlink::before,
    h5:hover .headerlink::before,
    h6:hover .headerlink::before {
      opacity: 1; 
    }
    .headerlink::before{
      content: '#';
      position: absolute;
      left: -15px;
      top: 50%;
      transform: translateY(-50%);
      opacity: 0;
      transition: all 0.3s;
      color: #273849;
    }
  }
  img {
    max-width: 100%;
    margin: 0 50%;
    transform: translateX(-50%);
  }
  blockquote {
    border-left: 5px solid #42b983;
    padding: 1rem 0.8rem 0.2rem 0.8rem;
    // color: #2c3e50;
    background-color: rgba(66, 185, 131, .1);
    margin: 0;
    word-break: break-all;
  }
  code {
      padding: 1px 5px;
      top: 13px !important;
      font-family: Inconsolata, Monaco, Consolas, 'Courier New', Courier, monospace;
      font-size: 0.91rem;
      color: #d63200;
      background-color: #f8f8f8;
      border-radius: 2px;
  }
  /* 代码块复制按钮 */
  pre {
      /* 方便copy代码按钮（btn-copy）的定位 */
      position: relative;
      .btn-copy {
        display: inline-block;
        cursor: pointer;
        background-color: #eee;
        background-image: linear-gradient(#fcfcfc, #eee);
        border: 1px solid #d5d5d5;
        border-radius: 3px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        -webkit-appearance: none;
        font-size: 13px;
        font-weight: 700;
        line-height: 20px;
        color: #333;
        -webkit-transition: opacity .3s ease-in-out;
        -o-transition: opacity .3s ease-in-out;
        transition: opacity .3s ease-in-out;
        padding: 2px 6px;
        position: absolute;
        right: 5px;
        top: 5px;
        opacity: 0;
    }
    .btn-copy span {
        margin-left: 5px;
    }
  }
  pre:hover .btn-copy {
      opacity: 1;
  }
  /* 代码块复制按钮 */
  :root {
      --side-bar-bg-color: #fff;
      --control-text-color: #777;
      --font-sans-serif: 'Ubuntu', 'Source Sans Pro', sans-serif !important;
      --font-monospace: 'Fira Code', 'Roboto Mono', monospace !important;
  }
  a:not(.toc-link) {
    color: #42b983;
    font-weight: 600;
    padding: 0 2px;
    text-decoration: none;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
      position: relative;
      margin-top: 1rem;
      margin-bottom: 1rem;
      font-weight: bold;
      line-height: 1.4;
      cursor: text;
  }
  h1:focus,
  h2:focus,
  h3:focus,
  h4:focus,
  h5:focus,
  h6:focus {
    outline: none;
  }

  h1:hover a.anchor,
  h2:hover a.anchor,
  h3:hover a.anchor,
  h4:hover a.anchor,
  h5:hover a.anchor,
  h6:hover a.anchor {
      text-decoration: none;
  }

  h1 tt,
  h1 code {
      font-size: inherit !important;
  }

  h2 tt,
  h2 code {
      font-size: inherit !important;
  }

  h3 tt,
  h3 code {
      font-size: inherit !important;
  }

  h4 tt,
  h4 code {
      font-size: inherit !important;
  }

  h5 tt,
  h5 code {
      font-size: inherit !important;
  }

  h6 tt,
  h6 code {
      font-size: inherit !important;
  }

  h2 a,
  h3 a {
      color: #273849;
  }

  h1 {
      padding-bottom: .4rem;
      font-size: 2.2rem;
      line-height: 1.3;
  }

  h2 {
      font-size: 1.75rem;
      line-height: 1.225;
      margin: 35px 0 15px;
      padding-bottom: 0.5em;
      border-bottom: 1px solid #ddd;
  }

  h3 {
      font-size: 1.4rem;
      line-height: 1.43;
      margin: 20px 0 7px;
  }

  h4 {
      font-size: 1.2rem;
  }

  h5 {
      font-size: 1rem;
  }

  h6 {
      font-size: 1rem;
      color: #777;
  }

  p,
  blockquote,
  ul,
  ol,
  dl,
  table {
      margin: 0.8em 0;
  }

  li > ol,
  li > ul {
      margin: 0 0;
  }

  hr {
      height: 2px;
      padding: 0;
      margin: 16px 0;
      background-color: #e7e7e7;
      border: 0 none;
      overflow: hidden;
      box-sizing: content-box;
  }
  a:first-child h1,
  a:first-child h2,
  a:first-child h3,
  a:first-child h4,
  a:first-child h5,
  a:first-child h6 {
      margin-top: 0;
      padding-top: 0;
  }

  h1 p,
  h2 p,
  h3 p,
  h4 p,
  h5 p,
  h6 p {
      margin-top: 0;
  }

  li p.first {
      display: inline-block;
  }

  ul,
  ol {
      padding-left: 30px;
  }

  // ul:first-child,
  // ol:first-child {
  //     margin-top: 0;
  // }

  ul:last-child,
  ol:last-child {
      margin-bottom: 0;
  }

  blockquote {
      border-left: 4px solid #42b983;
      padding: 10px 15px;
      // color: #2c3e50;
      background-color: rgba(66, 185, 131, .1);
  }

  table {
      padding: 0;
      word-break: initial;
      width: 100%;
      table-layout:fixed;
      border-collapse: collapse;
      border-spacing: 0;
      overflow: auto;
  }

  table tr {
      border-top: 1px solid #dfe2e5;
      margin: 0;
      padding: 0;
  }

  table tr:nth-child(2n),
  thead {
      background-color: #fafafa;
  }

  table tr th {
      font-weight: bold;
      border: 1px solid #dfe2e5;
      border-bottom: 0;
      text-align: left;
      margin: 0;
      padding: 6px 13px;
  }

  table tr td {
      border: 1px solid #dfe2e5;
      text-align: left;
      margin: 0;
      padding: 6px 13px;
      word-wrap:break-word;
  }

  table tr th:first-child,
  table tr td:first-child {
      margin-top: 0;
  }

  table tr th:last-child,
  table tr td:last-child {
      margin-bottom: 0;
  }

  p {
    margin: 2px 2px 10px;
    font-size: 1.05rem;
    line-height: 1.85rem;
  }
}

@media (max-width: 992px) {
  .main-content {
    width: 90%;
  }
  .toc-aside {
    display: none;   
  }
}
@media (max-width: 551px) {
  .post-detail {
    padding: 15px 15px 20px 18px; 
  }
}
