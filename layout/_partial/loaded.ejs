<!-- 页面预加载动画 -->
<% if (theme.preloader.on) { %>
  <% if (theme.preloader.type == '1') { %>
    <%- partial('preLoader/loader_1') %>
  <% } else if (theme.preloader.type == '2') {  %>
    <%- partial('preLoader/loader_2') %>
  <% } else if (theme.preloader.type == '3') {  %>
    <%- partial('preLoader/loader_3') %>
  <% } else if (theme.preloader.type == '4') {  %>
    <%- partial('preLoader/loader_4') %>
  <% } else if (theme.preloader.type == '5') {  %>
    <%- partial('preLoader/loader_5') %>
  <% } else if (theme.preloader.type == '6') {  %>
    <%- partial('preLoader/loader_6') %>
  <% } else if (theme.preloader.type == '7') {  %>
    <%- partial('preLoader/loader_7') %>
  <% } else if (theme.preloader.type == '8') {  %>
    <%- partial('preLoader/loader_8') %>
  <% } else if (theme.preloader.type == '9') {   %>
    <%- partial('preLoader/loader_9') %>
  <% } %>
<script>
  var endLoading = function () {
    document.body.style.overflow = 'auto';
    document.getElementById('loader').classList.add("loading");
  }
  window.addEventListener('DOMContentLoaded',endLoading);
</script>
<% } %>